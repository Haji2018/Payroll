@model PayrollApp.Models.DepartmentHead.WorkerPenalty



<div class="Holding col-md-12">
    <div class="head-holding">
        <div class="row">

            <p> İşçi Cəriməsi Üzərində Dəyişiklikler </p>




        </div>

    </div>
    <div class="col-md-8">
        <form asp-action="EditWorkerPenalty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control holdingControl" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PenaltyWritedDate" class="control-label"></label>
                <input asp-for="PenaltyWritedDate" class="form-control holdingControl" />
                <span asp-validation-for="PenaltyWritedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Worker" class="control-label"></label>
                @{
                    List<SelectListItem> ss = new List<SelectListItem>();
                    foreach (Worker item in ViewBag.Workers)
                    {
                        ss.Add(new SelectListItem
                        {
                            Text = item.Employee.Name,
                            Value = item.Id.ToString()
                        });
                    }
                }
                <select asp-for="WorkerId" class="form-control holdingControl" asp-items="ss"></select>
                <span asp-validation-for="Worker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
       
    </div>



</div>