@model PayrollApp.Areas.PayrollAdmin.ViewModels.EditRoleViewModel





    <form method="post" class="col-md-12 asp-controller="Role" asp-action="EditRole">


        <div class="form-group row">
            <label asp-for="Id" class="control-label  col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class=" form-control holdingControl" />
                
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="RoleName" class="control-label  col-sm-2"></label>
