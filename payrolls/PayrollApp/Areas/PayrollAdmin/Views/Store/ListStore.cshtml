
@model IEnumerable<PayrollApp.Models.Employment.Store>




<div class="Holding col-md-12">

    <div class="head-holding">
        <div class="row">

            <p> Mağaza Üzrə Əməliyyatlar</p>



        </div>

    </div>


    <div class="form-group searchIcon  col-xl-4">
        <i class="fas fa-search icon"></i>
        <input id="storeName" placeholder="AXTARIŞ" class="form-control searchInput" type="text" style="border-radius:5rem;" />
    </div>








    <table class="table  employees">

        <thead class="holdingThread">
            <tr class="holdingTr">
                <th>
                    <h5>Mağaza Adı</h5>
                </th>
                <th>
                    <h5>Ünvan</h5>
                <th>
                    <h5>Əlaqə Nömrəsi</h5>
                </th>
               
                <th>
                    <h5>Departament</h5>
                </th>

                <th>
                    <a asp-action="CreateStore">
                        <button title="Əlavə Et" type="submit" class="btn btn-primary holdingButton"><i class="fa fa-plus bigPlus"></i>  </button>

                    </a>

                    <a asp-action="ListStore">
                        <button title="Siyahı" type="submit" class="btn btn-primary holdingButton"><i class="fas fa-list bigPlus"></i></button>

                    </a>
                </th>

            </tr>
        </thead>
        <tbody class="table-body table-bordered holdingTbody">
            <partial name="LoadMoreStore" model="Model" />

        </tbody>
    </table>

    <div class="row">
        <button id="load_more_store" style="border-radius:5rem;" class="btn btn-primary w-25 mx-outo my-5 ml-5">Yüklə</button>

    </div>
    <input type="hidden" id="holdingCount" value="@ViewBag.TotalCount" />
</div>


<div class="modal fade" id="delete">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-bg-color">
            <div class="modal-header">
                <h5 class="ml-5">Silmək isdədiyinizdən əminsinizmi?</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <input id="nameStore" disabled class="form-control" />
            </div>

            <div class="modal-footer d-flex">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <span class="caption-subject bold">İmtina </span>
                </button>
                <span class="AntiForge"> @Html.AntiForgeryToken() </span>
                <button type="button" class="btn btn-danger deleteSave" data-dismiss="modal">
                    <i class="fas fa-trash text-white m-r-5"></i>
                    <span class="caption-subject bold ml-2">
                        Sil
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>
