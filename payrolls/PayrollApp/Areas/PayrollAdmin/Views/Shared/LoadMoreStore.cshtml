@model IEnumerable<PayrollApp.Models.Employment.Store>


@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StoreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>
        <td>
            <a class="btn btn-primary " asp-action="EditStore" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>

            <button title="Delete" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger deleteStore" data-toggle="modal"><i class="fas fa-trash"></i></button>
        </td>
    </tr>

    <tr class="d-none" id="trEmployee">

        <td>
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>


        <td>
            <a class="btn btn-primary " asp-action="EditStore" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
            <button title="Delete" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger deleteStore" data-toggle="modal"><i class="fas fa-trash"></i>Delete</button>
        </td>
    </tr>
}