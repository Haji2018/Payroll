
@model IEnumerable<PayrollApp.Models.PayrollSpecialist.Payment>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.Employee.Name)
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.Employee.Surname)
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDate)
        </td>


        <td>
            <a asp-action="GivePayment" asp-route-id="@item.WorkerId"  class="btn btn-primary" ><i class="fas fa-calculator"></i></a>

            <a class="btn btn-primary " asp-action="EditPayment" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>

            <button asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger deletePayment" data-toggle="modal"><i class="fas fa-trash"></i></button>




           

        </td>
    </tr>
}