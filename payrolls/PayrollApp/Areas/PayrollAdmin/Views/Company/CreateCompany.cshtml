@using PayrollApp.Models.Employment;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model Company



<div class="Holding col-md-12">
    <div class="head-holding">
        <div class="row">

            <p> Şirkət Yarat</p>




        </div>

    </div>

    <form asp-action="CreateCompany" method="post" asp-controller="Company">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CompanyName" class="control-label"></label>
            <input asp-for="CompanyName" class="form-control holdingControl" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control holdingControl" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control holdingControl" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="About" class="control-label"></label>
            <input asp-for="About" class="form-control holdingControl" />
            <span asp-validation-for="About" class="text-danger"></span>
        </div>
        @await Component.InvokeAsync("CurrentHolding")
        <div class="form-group">
            <input type="submit" value="Əlavə Et" class="btn btn-primary" /> |
            <a class=" btn listbtn" asp-action="ListCompany">Geri Qayıt</a>
        </div>
    </form>


</div>






