@using PayrollApp.Models.Employment
@using Microsoft.AspNetCore.Mvc.Rendering;
@model Store



<div class="Holding col-md-12">
    <div class="head-holding">
        <div class="row">

            <p> Mağaza Yarat</p>




        </div>

    </div>

    <form asp-action="CreateStore" method="post" asp-controller="Store">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StoreName" class="control-label"></label>
            <input asp-for="StoreName" class="form-control holdingControl" />
            <span asp-validation-for="StoreName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control holdingControl" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control holdingControl" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
      

        @await Component.InvokeAsync("CurrentDepartment")
        <div class="form-group">
            <input type="submit" value="Əlavə Et" class="btn btn-primary " /> |
            <a class=" btn listbtn" asp-action="ListStore">Geri Qayıt</a>
        </div>
    </form>


</div>
