@using PayrollApp.Models.Employment
@using Microsoft.AspNetCore.Mvc.Rendering
@model Worker

    <div class="Holding col-md-12">
        <div class="head-holding">
            <div class="row">

                <p> İşçi üzərində dəyişiklikler </p>




            </div>

        </div>
        <form asp-action="EditWorker" method="post" asp-controller="Worker" class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-md-3  workerClass" style="display:inline-block">
                <div class="form-group">
                    <label asp-for="Employee" class="control-label"></label>
                    @{
                        List<SelectListItem> vv = new List<SelectListItem>();
                        foreach (Employee item in ViewBag.Employees)
                        {
                            vv.Add(new SelectListItem
                            {
                                Text = item.Name,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="EmployeeId" class="form-control holdingControl" asp-items="vv"></select>
                    <span asp-validation-for="Employee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    @{
                        List<SelectListItem> bb = new List<SelectListItem>();
                        foreach (Department item in ViewBag.Departments)
                        {
                            bb.Add(new SelectListItem
                            {
                                Text = item.DepartmentName,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="DepartmentId" class="form-control holdingControl" asp-items="bb"></select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>


            </div>
            <div class="col-md-3  workerClass" style="display:inline-block">
                <div class="form-group">
                    <label asp-for="Store" class="control-label"></label>
                    @{
                        List<SelectListItem> ls = new List<SelectListItem>();
                        foreach (Store item in ViewBag.Stores)
                        {
                            ls.Add(new SelectListItem
                            {
                                Text = item.StoreName,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="StoreId" class="form-control holdingControl" asp-items="ls"></select>
                    <span asp-validation-for="Store" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    @{
                        List<SelectListItem> ww = new List<SelectListItem>();
                        foreach (Position item in ViewBag.Positions)
                        {
                            ww.Add(new SelectListItem
                            {
                                Text = item.PositionName,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="PositionId" class="form-control holdingControl" asp-items="ww"></select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            


            </div>
            <div class="col-md-3  workerClass" style="display:inline-block">
                <div class="form-group">
                    <label asp-for="Company" class="control-label"></label>
                    @{
                        List<SelectListItem> qq = new List<SelectListItem>();
                        foreach (Company item in ViewBag.Companies)
                        {
                            qq.Add(new SelectListItem
                            {
                                Text = item.CompanyName,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="CompanyId" class="form-control holdingControl" asp-items="qq"></select>
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PastPosition" class="control-label"></label>
                    @{
                        List<SelectListItem> oo = new List<SelectListItem>();
                        foreach (PastPosition item in ViewBag.PastPositions)
                        {
                            oo.Add(new SelectListItem
                            {
                                Text = item.PositionName,
                                Value = item.Id.ToString()
                            });
                        }
                    }
                    <select asp-for="PastPositionId" class="form-control holdingControl" asp-items="oo"></select>
                    <span asp-validation-for="PastPosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control holdingControl" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>



            </div>
          
            

            <div class="form-group" style="margin-top:2rem;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>



