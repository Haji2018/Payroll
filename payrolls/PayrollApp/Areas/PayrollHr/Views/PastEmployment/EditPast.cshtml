@using PayrollApp.Models.Employment
@model  PastEmployment




<div class="Holding col-md-12">
    <div class="head-holding">
        <div class="row">

            <p> Köhnə iş yeri üzərində dəyişiklikler </p>




        </div>

    </div>
    <form asp-action="EditPast">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Company" class="control-label"></label>
            <input asp-for="Company" class="form-control holdingControl" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control holdingControl" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control holdingControl" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TheReasonForFailure" class="control-label"></label>
            <input asp-for="TheReasonForFailure" class="form-control holdingControl" />
            <span asp-validation-for="TheReasonForFailure" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Employee" class="control-label"></label>
            @{
                List<SelectListItem> ls = new List<SelectListItem>();
                foreach (Employee item in ViewBag.Employees)
                {
                    ls.Add(new SelectListItem
                    {
                        Text = item.Name,
                        Value = item.Id.ToString()
                    });
                }
            }
            <select asp-for="EmployeeId" class="form-control holdingControl" asp-items="ls"></select>
            <span asp-validation-for="Employee" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>