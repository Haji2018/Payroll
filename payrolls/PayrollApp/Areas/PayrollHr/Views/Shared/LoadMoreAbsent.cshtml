@model IEnumerable<PayrollApp.Models.Employment.Absent>




@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.Employee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Worker.Employee.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AbsentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attandence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reason)
        </td>
        <td>
            <a class="btn btn-primary " asp-action="EditAbsent" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>

            <button title="Edit" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger deleteAbsent" data-toggle="modal"><i class="fas fa-trash"></i></button>

        </td>
    </tr>


  
}
