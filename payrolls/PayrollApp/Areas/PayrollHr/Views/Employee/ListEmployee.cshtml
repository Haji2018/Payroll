

@model IEnumerable<PayrollApp.Models.Employment.Employee>





    <div class="Holding col-md-12">

        <div class="head-holding">
            <div class="row">
                <p> İşçi Üzrə Əməliyyatlar</p>




            </div>

        </div>


        <div class="form-group searchIcon  col-xl-4">
            <i class="fas fa-search icon"></i>
            <input id="employeeName" placeholder="AXTARIŞ" class="form-control searchInput" type="text" style="border-radius:5rem;" />
        </div>






        <table class="table  employees">

            <thead class="holdingThread">
                <tr class="holdingTr">
                    <th>
                        <h5>Ad</h5>

                    </th>

                    <th>
                        <h5>Soyad</h5>
                    <th>

                        <h5>Doğum Tarixi</h5>
                    </th>

                    <th>

                        <h5>Təhsil </h5>
                    </th>
                    <th>

                        <h5>Ailə Vəziyyəti </h5>
                    </th>
                    <th>

                        <h5>Cins</h5>
                    </th>

                    <th>
                        <a asp-action="CreateEmployee">
                            <button title="Əlavə Et" type="submit" class="btn btn-primary holdingButton"><i class="fa fa-plus bigPlus"></i>  </button>

                        </a>

                        <a asp-action="ListEmployee">
                            <button title="Siyahı" type="submit" class="btn btn-primary holdingButton"><i class="fas fa-list bigPlus"></i></button>

                        </a>
                    </th>

                </tr>
            </thead>
            <tbody class="table-body table-bordered holdingTbody">
                <partial name="LoadMoreEmployee" model="Model" />

            </tbody>
        </table>

        <div class="row">
            <button id="load_more_employee" style="border-radius:5rem;" class="btn btn-primary w-25 mx-outo my-5 ml-5">Yüklə</button>

        </div>
        <input type="hidden" id="employeeCount" value="@ViewBag.TotalCount" />

    </div>



<div class="modal fade" id="detail">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-bg-color">
            <div class="modal-header">
                <h4 class="ml-5">Əlavə Məlumatlar</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <label>Ata Adı</label>
                <input id="fatherEmployee" class="form-control" />


                <label>Doğum Tarixi</label>
                <input id="dateEmoloyee" class="form-control" />


                <label>Ünvan</label>
                <input id="addressEmployee" class="form-control" />


                <label>Qeydiyyat</label>
                <input id="qeydiyyatEmployee" class="form-control" />

                <label>Seria:Aze</label>
                <input id="seriaEmployee" class="form-control" />


            </div>

            <div class="modal-footer d-flex">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    <span class="caption-subject bold">İmtina </span>
                </button>
                <span class="AntiForge"> @Html.AntiForgeryToken() </span>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-bg-color">
            <div class="modal-header">
                <h4 class="ml-5">Silmək isdədiyinizdən əminsinizmi?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <input id="nameEmployee" disabled class="form-control" />
            </div>

            <div class="modal-footer d-flex">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <span class="caption-subject bold">İmtina </span>
                </button>
                <span class="AntiForge"> @Html.AntiForgeryToken() </span>
                <button type="button" class="btn btn-danger deleteSave" data-dismiss="modal">
                    <i class="fas fa-trash text-white m-r-5"></i>
                    <span class="caption-subject bold ml-2">
                        Sil
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

